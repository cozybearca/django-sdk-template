    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "django": true,
            "justMyCode": false,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/project/site",
                    "remoteRoot": "/root/site"
                },
                {
                    "localRoot": "/usr/local/lib/python3.8/dist-packages/rest_framework",
                    "remoteRoot": "/usr/local/lib/python3.8/dist-packages/rest_framework"
                },
                {
                    "localRoot": "/usr/local/lib/python3.8/dist-packages/django",
                    "remoteRoot": "/usr/local/lib/python3.8/dist-packages/django"
                }
            ]
        },
    ]
}
